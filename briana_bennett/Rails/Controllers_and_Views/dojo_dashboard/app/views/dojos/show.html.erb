<!-- dojo info -->
<h1> <%= @dojo.branch %> </h1>
<a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
<h3>Address: <%= @dojo.street %> </h3>
<h3>Address: <%= @dojo.city %>  State: <%= @dojo.state %> </h3>
<!-- dojo students -->
<h2>Student Roster</h2>
<table style="width:100%">
  <tr>
    <th>First Name</th>
    <th>Last Name</th> 
    <th>Email</th>
    <th>Actions</th>
  </tr>
  	<% @students.each do |student| %>
	  	<tr>
		    <td> <%= student.first_name %> </td>
		    <td> <%= student.last_name %> </td>
		    <td> <%= student.email %> </td>
		    <td>  
		    	<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>">show</a> |
		    	<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>/edit">edit</a> |
		    	<a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>" data-method="delete">destroy</a>
		    </td>
	  	</tr>
	<% end %>
</table>

<p>
	<a href="/dojos">Home</a> 
	<a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>
</p>