<h1> <%= @student.dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %> </h1>
<p>Email: <%= @student.email %> </p>

<h3> Cohort </h3>

<table style="width:100%">
  <tr>
    <th>First Name</th>
    <th>Last Name</th> 
    <th>Email</th>
  </tr>
  	<% @cohort.each do |student| %>
	  	<tr>
		    <td> <%= student.first_name %> </td>
		    <td> <%= student.last_name %> </td>
		    <td> <%= student.email %> </td>
	  	</tr>
	<% end %>
</table>

<a href="/dojos">Home</a>
