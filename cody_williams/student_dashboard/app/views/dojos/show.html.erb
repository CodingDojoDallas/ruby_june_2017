<div>
	<h1><%= @dojo.branch %> Dojo</h1>
	<h3>Address: <%= @dojo.street %></h3>
	<h3>City: <%= @dojo.city %> State: <%= @dojo.state %></h3>
	<div>
		<h2>Student Roster</h2>
		<div>
			<a class="float_left" href="/">Home</a>
			<a class="float_right" href="/dojos/<%= @dojo.id %>/students/new">Add a Student</a>
		</div>
		<table>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Action</th>
			</tr>
			<% @students.each do |student| %>
				<tr>
					<td><%= student.name %></td>
					<td><%= student.email %></td>
					<td><a href="/students/<%= student.id %>">Show</a></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>